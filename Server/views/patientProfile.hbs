<main class="content">
	<div class="container-fluid p-0" style="width: 200%;">

		<div class="mb-3">
			<h1 class="h3 d-inline align-middle">Profile</h1>
		</div>
		<div class="row">
			<div class="col-12 col-md-4"style="margin-left: 10em;">
				<div class="card mb-3">
					<div class="card-header">
						<h5 class="card-title mb-0">My Details</h5>
					</div>
					<div class="card-body text-center">
						<img src="/img/{{patient.ImagePath}}" alt="{{patient.ImagePath}}" class="img-fluid rounded-circle mb-2" width="128" height="128" />
						<h5 class="card-title mb-0" style="font-weight: bold; font-size:1.5em">{{patient.FirstName}} {{patient.LastName}}</h5>

					</div>
					<hr class="my-0" />
					<div class="card-body">
						<h5 class="h6 card-title">About</h5>
						<li class="mb-4"><span style="font-weight: bold;" data-feather="mail" class="feather-sm me-1"></span><h5 style="font-weight: bold;">Email</h5>{{patient.Email}}</li>
							<li class="mb-4"><span style="font-weight: bold;" data-feather="home" class="feather-sm me-1"></span><h5 style="font-weight: bold;">BirthDate</h5> {{BDate}}</li>
							<li class="mb-4"><span style="font-weight: bold;" data-feather="phone" class="feather-sm me-1"></span><h5 style="font-weight: bold;">Phone</h5>{{patient.Phone}}</li>
							{{!-- <li class="mb-4"><span style="font-weight: bold;" data-feather="clipboard" class="feather-sm me-1"></span><h5 style="font-weight: bold;">Speciality</h5>	{{patient.Speciality}}</li> --}}
							<li class="mb-4"><span style="font-weight: bold;" data-feather="user" class="feather-sm me-1"></span><h5 style="font-weight: bold;">Gender</h5>	{{patient.Gender}}</li>
						</ul>
					</div>
				</div>
			</div>
		</div>	
	</div>
</main>