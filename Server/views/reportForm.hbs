									<input class="form-control form-control-lg" name="plt" value="{{info.measurments.PLT}}" type="number"  step=".1"style="float:left;" />
								</div>										
								<div class="mb-2">
									<input class="form-control form-control-lg" name="mpv" value="{{info.measurments.MPV}}" type="number" step=".1" style="float:right;" />
									<label class="form-label" style="float: right;margin-right: 1em;margin-top: 0.5em; width: 50px;">MPV</label>
								</div>
							</div>										
							<div style="display: inline-block; block; width: 100%;">
								<div class="mb-2" style="margin-top: 1em;">
									<label class="form-label" style="float: left;margin-right: 1em;margin-top: 0.5em; width: 50px;">PCT</label>
									<input class="form-control form-control-lg" name="pct" value="{{info.measurments.PCT}}" type="number" step=".1" style="float:left;" />
								</div>										
								<div class="mb-2">
									<input class="form-control form-control-lg" name="pdw" value="{{info.measurments.PDW}}" type="number" step=".1" style="float:right;" />
									<label class="form-label" style="float: right;margin-right: 1em;margin-top: 0.5em; width: 50px;">PDW</label>
								</div>
							</div>										
							<div class="mb-5" style="margin-top: 1em;">
								<label class="form-label">Comments</label>
								<input class="form-control form-control-lg"  value="{{info.comments}}" name="comments" type="text" style="width: 100%;" />
							</div>
							<input type="text" name="reportid" style="visibility: hidden;">
							<div class="text-center mt-3">
								<button type="submit" class="btn btn-lg btn-primary">Save & Submit</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
