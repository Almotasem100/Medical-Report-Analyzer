	<script src="https://code.jquery.com/jquery-2.1.3.min.js"></script>


</head>

<body>
    <div class="page-wrapper bg-img-1 p-t-165 p-b-100">
        <div class="wrapper wrapper--w720">
            <div class="card card-3" style="position: absolute; top:60px; ">
                <div class="card-body">
                    {{#if error}} <h2 style="align-items: center;  color:red" >Error: {{error}}</h2>{{/if}}
                    <ul class="tab-list">
                        <li class="tab-list__item active">
                            <a class="tab-list__link" href="#tab1" data-toggle="tab">Doctor</a>
                        </li>
                        <li class="tab-list__item">
                            <a class="tab-list__link" href="#tab2" data-toggle="tab">Patient</a>
                        </li>
                        <li class="tab-list__item" style="margin-left: 180px;">
                            <a class="tab-list__link" href="/signin" style="color: 	#FFCD00;" >Sign In</a>
                        </li>
                        <li class="tab-list__item">
                            <div class="w3-xlarge" style="color: white;">
                                <a href="/"><i class="fa fa-home"></i></a>
                            </div>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" id="tab1">
                            <form method="POST" action="/signupDoctor" enctype="multipart/form-data" >
                                <div class="row row-space">
                                    <div class="col-2">
                                        <div class="input-group">
                                            <label class="label">First Name</label>
                                            <input class="input--style-1" type="text" name="first_name" placeholder="ex. John" required="required">
                                        </div>
                                    </div>
                                    <div class="col-2">
                                        <div class="input-group">
                                            <label class="label">Last Name</label>
                                            <input class="input--style-1" type="text" name="last_name" placeholder="ex. Doe" required="required">
                                        </div>
                                    </div>
                                </div>
                                <div class="row row-space">
                                    <div class="col-2">
                                        <div class="input-group">
                                            <label class="label">Email</label>
                                            <input class="input--style-1" type="email" name="email" placeholder="ex. Johndoe@gmail.com" required="required">
                                        </div>
                                    </div>
                                    <div class="col-2">
                                        <div class="input-group">
                                            <label class="label">Phone</label>
                                            <input class="input--style-1" type="text" name="phone" placeholder="ex. +02EGY" required="required">
                                        </div>
                                    </div> 
                                </div>
                                <div class="row row-space">
                                    <div class="col-2">
                                        <div class="input-group">
                                            <label class="label">Speciality</label>
                                            <div class="rs-select2 js-select-simple select--no-search">
                                                <select name="speciality">
                                                    <option selected="selected" value="Ortho">Ortho</option>
                                                    <option value="Neuro">Neuro</option>
                                                    <option value="Hematology">Hematology</option>
                                                    <option value="Neonates">Neonates</option>
                                                </select>
                                                <div class="select-dropdown"></div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-2">
                                        <div class="input-group" style="height: 4em;">
                                            <label class="label">Image</label>
                                            <label for="file-upload" class="custom-file-upload">
                                                <i class="fa fa-cloud-upload"></i>Select
                                            </label>
                                            <input id="file-upload" type="file" name="image"/>
                                        </div>
                                    </div>   
                                </div>
                                <div class="row row-space">
                                    <div class="col-2">
                                        <div class="input-group">
                                            <label class="label">Birth Date</label>
                                            <input class="input--style-1 " type="date" name="birth_date" placeholder="mm/dd/yyyy" >
                                        </div>
                                    </div>
                                    <div class="col-2">
                                        <div class="input-group">
                                            <label class="label">Password</label>
                                            <input class="input--style-1" type="password" name="password" placeholder="Enter pass" required="required">
                                        </div>
                                    </div>
                                </div>
                                <div class="row row-space">
                                    <div class="col-2">
                                        <div class="radio-row">
                                            <label class="radio-container m-r-45">MALE
                                                <input type="radio" name="gender" value="Male">
                                                <span class="radio-checkmark"></span>
                                            </label>
                                            <label class="radio-container m-r-45">FEMALE
                                                <input type="radio" name="gender" value="Female">
                                                <span class="radio-checkmark"></span>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <button class="btn-submit" type="submit">SIGN UP</button>
                            </form>
                        </div>
                        <div class="tab-pane" id="tab2">
                            <form method="POST" action="/signupPatient" enctype="multipart/form-data" >
                                <div class="row row-space">
                                    <div class="col-2">
                                        <div class="input-group">
                                            <label class="label">First Name</label>
                                            <input class="input--style-1" type="text" name="first_name" placeholder="ex. John" required="required">
                                        </div>
                                    </div>
                                    <div class="col-2">
                                        <div class="input-group">
                                            <label class="label">Last Name</label>
                                            <input class="input--style-1" type="text" name="last_name" placeholder="ex. Doe" required="required">
                                        </div>
                                    </div>
                                </div>
                                <div class="row row-space">
                                    <div class="col-2">
                                        <div class="input-group">
                                            <label class="label">Email</label>
                                            <input class="input--style-1" type="email" name="email" placeholder="ex. Johndoe@gmail.com" required="required">
                                        </div>
                                    </div>
                                    <div class="col-2">
                                        <div class="input-group">
                                            <label class="label">Phone</label>
                                            <input class="input--style-1" type="text" name="phone" placeholder="ex. +02EGY" required="required">
                                        </div>
                                    </div> 
                                </div>
                                <div class="row row-space">
                                    <div class="col-2">
                                        <div class="input-group">
                                            <label class="label">Status</label>
                                            <div class="rs-select2 js-select-simple select--no-search">
                                                <select name="status">
                                                    <option selected="selected" value="Ortho">Single</option>
                                                    <option value="Neuro">Neuro</option>
                                                    <option value="Hematology">Married</option>
                                                    <option value="Neonates">Divorced/Widower</option>
                                                </select>
                                                <div class="select-dropdown"></div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-2">
                                        <div class="input-group" style="height: 4em;">
                                            <label class="label">Image</label>
                                            <label for="file-upload" class="custom-file-upload">
                                                <i class="fa fa-cloud-upload"></i>Select
                                            </label>
                                            <input id="file-upload" type="file" name="image"/>
                                        </div>
                                    </div>   
                                </div>
                                <div class="row row-space">
                                    <div class="col-2">
                                        <div class="input-group">
                                            <label class="label">Birth Date</label>
                                            <input class="input--style-1 " type="date" name="birth_date" placeholder="mm/dd/yyyy" >
                                        </div>
                                    </div>
                                    <div class="col-2">
                                        <div class="input-group">
                                            <label class="label">Password</label>
                                            <input class="input--style-1" type="password" name="password" placeholder="Enter pass" required="required">
                                        </div>
                                    </div>
                                </div>
                                <div class="row row-space">
                                    <div class="col-2">
                                        <div class="radio-row">
                                            <label class="radio-container m-r-45">MALE
                                                <input type="radio" name="gender" value="Male">
                                                <span class="radio-checkmark"></span>
                                            </label>
                                            <label class="radio-container m-r-45">FEMALE
                                                <input type="radio" name="gender" value="Female">
                                                <span class="radio-checkmark"></span>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <button class="btn-submit" type="submit">SIGN UP</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

